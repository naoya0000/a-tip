<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
    <h1 class="tabletitle my-4 text-center">Animation List</h1>
    <% if @animes.any? %>
      <table class="table table-striped">
        <tbody>
          <% @animes.each do |anime| %>
            <tr>
              <td><%= link_to image_tag(anime.img1.to_s, size: '96x136'), admin_anime_path(anime.id) %></td>
              <td class="titletext text-center lead"><%= link_to anime.title1, admin_anime_path(anime.id), class: "titletextlink"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center mb-3">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    <% end %>
    </div>
  </div>
</div>


