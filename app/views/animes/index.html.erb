<div class="container">
  <div class="row">
    <div class="">
    <h1 class="tabletitle text-center mt-5 mb-5">Animation List</h1>
    <% if @animes.any? %>
    <div class="row">
      <% @animes.each do |anime| %>
        <div class="col-lg-4 col-md-6  col-12 d-flex justify-content-center">
        <div class="card my-4" style="width: 230px;">
          <a href="/animes/<%= anime.id %>" class="text-dark text-decoration-none">
            <%= image_tag(anime.img1.to_s, size: '230x326')%>
            <div class="card-body">
              <h5 class="lead text-center"><%= anime.title1 %>
            </div>
          </a>
        </div>
        </div>
      <% end %>
      </div>
      <div class="d-flex justify-content-center my-4">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    <% end %>
    </div>
  </div>
</div>


